<%- include('partials/header'); %>
<div class ="ui main text container segment">
    <div class ="ui huge header">Edit  <%= blog[0].title %></div>
    <form class="ui form" action="/blogs/<%= blog[0].id %>?_method=PUT"  method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog[0].title %>" value="PUT">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog[0].image %>" value="PUT">
        </div>
        <div class="field">
            <label>Blog content</label>
             <textarea name="blog[body]"><%=blog[0].body %></textarea>
            
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<%- include('partials/footer'); %>